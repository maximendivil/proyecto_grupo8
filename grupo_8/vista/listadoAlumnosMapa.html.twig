{% extends 'headerBackend.twig.html' %}
	{% block title %} {{titulo}} {% endblock %}
	{% block saludo %}
		{{ usuario }}
	{% endblock %}

	{% block titulo %}
		{{ titulo }}
	{% endblock %}
	
	{% block contenido %}
		<div id="listado">
			<form action="../controlador/backend.php?controller=mostrarAlumnos" method="POST">
			<table>
				<caption>Listado de alumnos de la escuela</caption>
				<tr>
					<th>DNI</th><th>Nombre</th><th>Apellido</th><th>Direcci√≥n</th><th>Seleccionar</th>
				</tr>
				{% if msj is defined %}
						</table>
						</form>
						{{msj}}
					{% endif %}
					{% if rows is defined %}
						{% for alumno in rows %}
							<tr>
							<td>{{alumno.numeroDocumento}}</td>
							<td>{{alumno.nombre}}</td>
							<td>{{alumno.apellido}}</td>
							<td>{{alumno.direccion}}</td>
							<td><input type="checkbox" name="alumno[]" value="{{ alumno.id }}"></td>				
							</tr>
						{% endfor %}
						<tr>
						<td>
							<button class="" name="submit" value="Enviar" type="submit">Generar recorrido!</button>
						</td>
						</tr>
						</table>
					</form>
					{% endif %}
		</div>
			
	{% endblock %}